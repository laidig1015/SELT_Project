<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <h3>About Me:</h3>
    <% if @user.bio.nil? %>
        <%= "It appears #{@user.name} hasn't created a biography!" %>
    <% else %>
      <% if @user.bio.empty? %>
        <%= "It appears #{@user.name} hasn't created a biography!" %>
      <% else %>
        <%= @user.bio  %>
      <% end %>
    <%end%>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>My Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>