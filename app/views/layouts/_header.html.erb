
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">

<div class="container">

    <%= link_to "Chatter", root_path, id: "logo" %>

      <nav>
<%= link_to image_tag("logo.png", alt: "Rails", id: "chatlogo")%>
       <%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="container">
        <%=submit_tag "Search", :class => "btn", :class => "icon-search", id: "search-button"%>
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Users", id: "search-users" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
        <%end%>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown", id: "account">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>